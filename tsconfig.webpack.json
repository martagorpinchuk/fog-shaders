{
    "compilerOptions": {
      "baseUrl": "./src",
      "outDir": "./dist/",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": false,
      "module": "commonjs",
      "target": "es6",
      "jsx": "react",
      "allowJs": true,
      "sourceMap": true,
      "lib": [ "webworker", "es6", "dom" ]
    },
    "paths": {},
    "exclude": [
      "node_modules"
    ],
    "include": [
        "src/scripts/*"
    ]
}
